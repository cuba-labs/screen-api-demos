<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.screenapidemos.web.order">
    <data>
        <instance id="orderCt"
                    class="com.haulmont.screenapidemos.entity.Order"
                    view="order-edit-view">
            <loader/>

            <collection id="orderLinesCt" property="orderLines"/>
        </instance>

        <collection id="customersCt" class="com.haulmont.screenapidemos.entity.Customer" view="_minimal">
            <loader>
                <query>
                    select e from sad_Customer e order by e.name
                </query>
            </loader>
        </collection>
    </data>

    <dialogMode height="600"
                width="800"/>

    <layout expand="itemsBox" spacing="true">
        <form id="fieldGroup" dataContainer="orderCt">
            <column width="250px">
                <textField property="num"/>
                <dateField property="date"/>
                <lookupPickerField property="customer" optionsContainer="customersCt"/>
            </column>
        </form>

        <groupBox id="itemsBox" caption="Items" stylename="light">
            <table id="orderLinesTable" dataContainer="orderLinesCt" height="100%" width="100%">
                <buttonsPanel>
                    <button action="orderLinesTable.create"/>
                    <button action="orderLinesTable.edit"/>
                    <button action="orderLinesTable.remove"/>
                </buttonsPanel>
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="product"/>
                    <column id="price"/>
                    <column id="quantity"/>
                </columns>
            </table>
        </groupBox>

        <fragment id="editorActions"
               screen="editorActions"/>
    </layout>
</window>
