<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Form Data Container">

    <data>
        <instance id="userCt"
                  class="com.haulmont.cuba.security.entity.User"
                  view="user.edit"/>
    </data>

    <layout spacing="true">
        <form id="form"
              dataContainer="userCt">
            <textField id="loginField"
                       property="login"/>
            <passwordField id="passwordField"
                           property="password"/>
            <pickerField id="groupField"
                         property="group">
                <actions>
                    <action id="lookup"
                            type="picker_lookup"/>
                </actions>
            </pickerField>
            <checkBox id="activeField"
                      property="active"/>
        </form>
    </layout>
</window>
