<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Form Caption Position">

    <layout spacing="true">
        <hbox spacing="true">
            <form id="formLeft"
                  caption="Caption Position: TOP"
                  captionPosition="TOP">
                <textField caption="TextField"/>
                <lookupField caption="LookupField"/>
                <pickerField caption="PickerField"/>
                <checkBox caption="CheckBox"/>
            </form>

            <form id="formRight"
                  caption="Caption Position: LEFT"
                  captionPosition="LEFT">
                <textField caption="TextField"/>
                <lookupField caption="LookupField"/>
                <pickerField caption="PickerField"/>
                <checkBox caption="CheckBox"/>
            </form>
        </hbox>
    </layout>
</window>
